#!/usr/bin/env ruby
# frozen_string_literal: true

# Lightweight wrapper reusing build-emacs-for-macos implementation
# to build "Mac port" (jdtsmith/emacs-mac).

load File.join(__dir__, "build-emacs-for-macos")

class MacPortBuild < Build
  def initialize(root_dir, ref = nil, options = {})
    # Initialize the debug log
    File.write("debug.log", "=== Build Started at #{Time.now} ===\n")

    options = (options || {}).dup
    if options[:dist_include].nil?
      options[:dist_include] = ["configure_output.txt", "COPYING"]
    else
      defaults = ["configure_output.txt", "COPYING"]
      options[:dist_include] = (options[:dist_include] + defaults).uniq
    end
    options[:rsvg] = false if options[:rsvg].nil?
    super(root_dir, ref, options)
  end

  # --- NEW DEBUG HELPER ---
  def debug_log(message)
    # Print to console (standard info)
    info message
    # Write detailed info to file
    File.open("debug.log", "a") do |f|
      f.puts "[#{Time.now.strftime('%H:%M:%S')}] #{message}"
    end
  end

  def debug_cmd(command)
    output = `#{command} 2>&1`
    File.open("debug.log", "a") do |f|
      f.puts ">>> EXEC: #{command}"
      f.puts output
      f.puts "<<< END"
    end
  end
  # ------------------------

  private

  def github_src_repo
    @github_src_repo ||= options[:github_src_repo] || "jdtsmith/emacs-mac"
  end

  def build_name
    return @build_name if @build_name
    return @build_name = options[:build_name] if options[:build_name]
    metadata = [
      meta[:date]&.strftime("%Y-%m-%d"),
      meta[:sha][0..6],
      meta[:ref],
      "mac-port",
      "macOS-#{OS.sdk_version}",
      OS.arch,
    ].compact.map { |v| v.gsub(/[^\w_-]+/, "-") }
    @build_name = "Emacs.#{metadata.join(".")}"
  end

  def apply_macos_startup_patch(_target)
    debug_log "Skipping NS-port macOS startup patch for Mac-port"
  end

  def build_patches
    p = []
    options[:patches].each do |patch_str|
      patch = {}
      if valid_url?(patch_str)
        patch[:url] = patch_str
      elsif File.exist?(patch_str)
        patch[:file] = patch_str
      else
        fatal "Patch file or URL not found: #{patch_str}"
      end
      p << patch
    end
    p.uniq
  end

  def hoist_pdmp_files(app_path, location_name = "bundle")
    return unless File.directory?(app_path)

    debug_log "Attempting to hoist PDMP files in #{location_name} at #{app_path}"

    macos_dir = File.join(app_path, "Contents", "MacOS")
    unless File.directory?(macos_dir)
      debug_log "ERROR: MacOS directory missing in #{app_path}"
      return
    end

    # Debug current state
    debug_cmd("ls -R '#{macos_dir}'")

    pdmp_candidates = Dir.glob(File.join(macos_dir, "libexec", "**", "*.pdmp"))
    if pdmp_candidates.any?
      pdmp_candidates.each do |pdmp_source|
        pdmp_name = File.basename(pdmp_source)
        pdmp_dest = File.join(macos_dir, pdmp_name)
        if File.expand_path(pdmp_source) != File.expand_path(pdmp_dest)
          debug_log "Hoisting PDMP: #{pdmp_source} -> #{pdmp_dest}"
          FileUtils.cp(pdmp_source, pdmp_dest)
        end
      end
    else
      existing_pdmp = File.join(macos_dir, "Emacs.pdmp")
      if File.exist?(existing_pdmp)
        debug_log "PDMP already at root: #{existing_pdmp}"
      else
        debug_log "WARNING: No PDMP found recursively in #{macos_dir}"
      end
    end

    # Link Emacs.real.pdmp
    final_pdmp = File.join(macos_dir, "Emacs.pdmp")
    real_pdmp = File.join(macos_dir, "Emacs.real.pdmp")
    if File.exist?(final_pdmp) && !File.exist?(real_pdmp)
      begin
        FileUtils.ln_s("Emacs.pdmp", real_pdmp)
        debug_log "Created symlink: Emacs.real.pdmp -> Emacs.pdmp"
      rescue => e
        debug_log "Failed to create PDMP symlink: #{e.message}"
      end
    end
  end

  def compile_source(source)
    debug_log "Entering compile_source. Source: #{source}"

    # Check for cached builds
    ns_target = File.join(source, "nextstep")
    mac_target = File.join(source, "mac")
    ns_app = File.join(ns_target, "Emacs.app")
    mac_app = File.join(mac_target, "Emacs.app")

    if app_has_binary?(ns_app)
      debug_log "Found cached binary in nextstep"
      return ns_app
    elsif app_has_binary?(mac_app)
      debug_log "Found cached binary in mac"
      return mac_app
    end

    debug_log "Compiling from source..."

    FileUtils.cd(source) do
      if options[:native_comp]
        debug_log "Native comp enabled"
        verify_native_comp
        gcc_info.verify_libgccjit
      end

      compile_env.each { |k, v| ENV[k] = v }

      local_lisp_path = [
        ENV.fetch("EMACS_LOCAL_LISP_PATH", "").split(":"),
        "/Library/Application Support/Emacs/${version}/site-lisp",
        "/Library/Application Support/Emacs/site-lisp",
        "/usr/local/share/emacs/site-lisp",
        "/opt/homebrew/share/emacs/site-lisp",
      ].flatten.join(":")

      if File.exist?("autogen.sh")
        debug_log "Running autogen.sh"
        run_cmd("./autogen.sh")
      end

      # Create external absolute staging dir
      staging_dir = File.join(root_dir, "staging_build")
      debug_log "Preparing staging dir: #{staging_dir}"
      FileUtils.rm_rf(staging_dir)
      FileUtils.mkdir_p(staging_dir)

      configure_flags = [
        "--with-mac",
        "--with-modules",
        "--enable-locallisppath=#{local_lisp_path}",
        "--enable-mac-app=#{staging_dir}", # Absolute external path
        "--enable-mac-self-contained",
        "--with-mac-metal",
      ]

      configure_flags << "--with-xwidgets" if options[:xwidgets] && supports_xwidgets?
      configure_flags << "--with-tree-sitter" if options[:tree_sitter] && supports_tree_sitter?

      if options[:native_comp]
        if options[:native_full_aot]
          configure_flags << "--with-native-compilation=aot"
          debug_log "Configure: AOT enabled"
        else
          configure_flags << (native_comp_configure_flag || "--with-native-compilation=yes")
        end
      end

      configure_flags << "--without-rsvg" if options[:rsvg] == false
      configure_flags << "--without-dbus" if options[:dbus] == false

      aux_prefix = File.join(output_dir, build_name, "staging")
      FileUtils.mkdir_p(aux_prefix)
      configure_flags << "--prefix=#{aux_prefix}"

      debug_log "Configure flags: #{configure_flags}"
      run_cmd("./configure", *configure_flags.compact, output_file: "configure_output.txt")

      if OS.sdk_version.major <= 10 && OS.sdk_version.minor <= 14
        disable_alligned_alloc
      end

      make_flags = []
      make_flags += ["-j", options[:parallel].to_s] if options[:parallel]

      if options[:native_comp]
        make_flags << "BYTE_COMPILE_EXTRA_FLAGS=--eval '(setq comp-speed 2)'"
        if options[:native_full_aot]
          ENV.delete("NATIVE_FAST_BOOT")
        else
          ENV.delete("NATIVE_FULL_AOT")
          ENV["NATIVE_FAST_BOOT"] = "1"
        end
      end

      debug_log "Running make with flags: #{make_flags}"
      run_cmd("make", *make_flags.compact)

      # --- DEBUG: CHECK BINARY AFTER MAKE ---
      unless File.exist?("src/Emacs")
        debug_log "CRITICAL FAILURE: src/Emacs binary missing after make"
        fatal "Make failed: src/Emacs binary does not exist."
      end
      debug_log "Binary built successfully at src/Emacs. Size: #{File.size('src/Emacs')}"

      gnubin = "/opt/homebrew/opt/coreutils/libexec/gnubin"
      if Dir.exist?(gnubin)
        ENV["PATH"] = "#{gnubin}:#{ENV["PATH"]}"
      end

      debug_log "Running make install..."
      install_log = File.join(output_dir, build_name, "install_output.txt")
      sh_cmd = "make install 2>&1 | tee \"#{install_log}\""
      unless system("sh", "-lc", sh_cmd)
        warn "make install exited with non-zero status"
      end

      # --- DEBUG: CHECK STAGING DIR ---
      source_app_path = File.join(staging_dir, "Emacs.app")
      debug_log "Checking staging dir at: #{source_app_path}"
      debug_cmd("ls -R '#{staging_dir}'")

      unless File.directory?(source_app_path)
        debug_log "Staging app directory not found!"
        fatal "Build failed: App not found at #{source_app_path}"
      end

      # 1. Hoist PDMP in staging
      hoist_pdmp_files(source_app_path, "staging bundle")

      # 2. Move to Output
      final_app_dir = File.join(output_dir, build_name)
      final_app_path = File.join(final_app_dir, "Emacs.app")

      debug_log "Moving app from #{source_app_path} to #{final_app_dir}"
      FileUtils.mkdir_p(final_app_dir)
      FileUtils.rm_rf(final_app_path) if File.exist?(final_app_path)

      FileUtils.cp_r(source_app_path, final_app_dir)

      # --- DEBUG: VERIFY COPY ---
      debug_log "Copy finished. Checking final destination: #{final_app_path}"
      debug_cmd("ls -R '#{final_app_path}'")

      if File.directory?(final_app_path)
        debug_log "App successfully copied."
        FileUtils.rm_rf(staging_dir)
      else
        debug_log "CRITICAL: Copy failed. Final directory not found."
        fatal "Failed to copy app to #{final_app_path}"
      end

      # 3. Hoist PDMP in final (double check)
      hoist_pdmp_files(final_app_path, "final bundle")

      unless app_has_binary?(final_app_path)
        debug_log "Validation app_has_binary? failed for #{final_app_path}"
        fatal "Build failed: Binary missing in #{final_app_path}"
      end

      debug_log "Build successful!"
      final_app_path
    end
  end

  def app_has_binary?(app_path)
    debug_log "Validating binary in #{app_path}"
    return false unless File.exist?(app_path)
    macos_dir = File.join(app_path, "Contents", "MacOS")
    return false unless File.directory?(macos_dir)

    binary = File.join(macos_dir, "Emacs")
    has_binary = File.file?(binary) && !File.symlink?(binary)
    debug_log "Binary exists? #{has_binary}"

    has_binary
  end

  def create_build_dir(app)
    target_dir = File.join(output_dir, build_name)
    app_abs = File.expand_path(app)

    debug_log "Creating build dir. Source: #{app}, Target: #{target_dir}"

    if app_abs == File.join(target_dir, "Emacs.app")
      return [target_dir, app_abs]
    end

    info "Copying app to #{target_dir}"
    FileUtils.mkdir_p(target_dir)
    FileUtils.rm_rf(File.join(target_dir, "Emacs.app"))
    cmd("cp", "-a", app, target_dir)
    [target_dir, File.join(target_dir, File.basename(app))]
  end

  def sanitize_bundle_dirs(app)
    return unless File.directory?(app)
    debug_log "Sanitizing bundle dirs in #{app}"
    Dir[File.join(app, "**", "*")].sort_by { |x| -x.length }.each do |path|
      next unless File.directory?(path)
      next if path == app
      base = File.basename(path)
      next unless base.include?(".")
      next if base.end_with?(".app")

      parent = File.dirname(path)
      new_path = File.join(parent, base.gsub(".", "_"))

      begin
        FileUtils.mv(path, new_path)
        if path.include?("/libexec/") && base.match?(/apple-darwin/)
          FileUtils.ln_s(File.basename(new_path), path)
        end
      rescue => e
        warn "Failed to sanitize #{path}: #{e.message}"
      end
    end
  end

  def self_sign_app(app)
    debug_log "Signing app: #{app}"
    Dir[File.join(app, "**", "_CodeSignature")].each { |d| FileUtils.rm_rf(d) }
    sanitize_bundle_dirs(app)
    super(app)
  end
end

if __FILE__ == $PROGRAM_NAME
  begin
    cli_options = CLIOptions.parse(ARGV)
    Output.log_level = cli_options.delete(:log_level)
    work_dir = cli_options.delete(:work_dir)
    build = MacPortBuild.new(work_dir, ARGV.shift, cli_options)

    if cli_options[:info]
      build.print_info
    elsif cli_options[:preview]
      build.print_preview
    else
      build.build
    end
  rescue Error => e
    warn "ERROR: #{e.message}"
    File.open("debug.log", "a") { |f| f.puts "FATAL ERROR: #{e.message}\n#{e.backtrace.join("\n")}" }
    exit 1
  end
end
